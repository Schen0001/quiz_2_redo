<h1 style="text-align: center;">Sign In</h1>

<div class="signin-div">
  <div class="signin-div-child">
  <%= form_tag sessions_path do %>
    <%= label_tag :email %> <br>
      <%= email_field_tag :email %> <br> <br>
        <%= label_tag :password %> <br>
          <%= password_field_tag :password %> <br> <br>
            <%= submit_tag "Log In" %>
              <% end %>
            </div>
</div>