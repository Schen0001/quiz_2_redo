<h1 style="text-align: center;">Edit Idea</h1>

<div class="edit-div">
    <div class="edit-div-child">
<%= form_for(@post) do |f| %>
<%= f.label :title %> <br>
<%= f.text_field :title, :placeholder => "cool robot etc.." %> <br> <br>
<%= f.label :body %> <br>
<%= f.text_area :body, :placeholder => "Description of your idea..." %> <br> <br>
<%= f.submit "Edit" %>
<% end %>
</div>
</div>